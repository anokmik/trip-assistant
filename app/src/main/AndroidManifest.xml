<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anokmik.tripassistant">

    <application
        android:name=".TripAssistantApplication"
        android:allowBackup="${allowBackup}"
        android:fullBackupContent="${fullBackupContent}"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".trip.TripActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".author.AuthorActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

    </application>

</manifest>