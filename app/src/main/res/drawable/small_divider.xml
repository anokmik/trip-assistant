<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size android:height="@dimen/divider_small_height" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/divider_small_offset"
        android:left="@dimen/divider_small_offset"
        android:right="@dimen/divider_small_offset"
        android:top="@dimen/divider_small_offset">

        <shape android:shape="rectangle">
            <size android:height="@dimen/divider_size" />
            <solid android:color="@color/material_dark_divider" />
        </shape>
    </item>

</layer-list>